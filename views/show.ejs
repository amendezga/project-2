<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Just a Burger Restaurant</title>
</head>

<body>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <header>
    <h1>McBurgies</h1>
  </header>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/menu">Menu</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>

  <main>

    <section>
      
      <h1 class="burger-name"><%= burger.name %></h1>
      <p><%= burger.description %></p>
      <p><strong>Ingredients:</strong></p>
      <ul>
        <% burger.ingredients.forEach(function(ingredient) { %>
          <li class="ingredients"><%= ingredient %></li>
          <% }); %>
        </ul>
        <p><strong>Price:</strong> $<%= burger.price.toFixed(2) %></p>
        
        <div class="button-group">
          <form method="GET" action="/menu/<%= burger.id %>/edit">
            <button type="submit" class="button">Edit</button>
          </form>
          <form method="POST" action="/menu/<%= burger.id %>/delete?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="button">Delete</button>
          </form>
        </div>
        
      </section>
    </main>
      
      
  <footer>
    <p>&copy; 2023 McBurgies</p>
  </footer>
</body>
  
</html>
